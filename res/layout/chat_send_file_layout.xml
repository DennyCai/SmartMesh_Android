<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_title_layout" />

    <ExpandableListView
        android:id="@+id/expand_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@null"
        android:listSelector="@drawable/scrollview_item_bg" />

    <RelativeLayout
        android:id="@+id/bottom_rela"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_selected_bg">

        <TextView
            android:id="@+id/has_selected_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="@string/chat_file_scan"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/send_file_num"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/selector_round_black_5"
            android:gravity="center"
            android:enabled="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/chat_send_file"
            android:textColor="@color/textColor"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>