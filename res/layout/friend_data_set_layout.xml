<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_sep_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/chattingSetTitle"
        layout="@layout/app_title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/textColor"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gray_sep_bg" />


        <RelativeLayout
            android:id="@+id/addNoteBody"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/scrollview_item_bg" >

            <TextView
                style="@style/my_setting_left_tv_style"
                android:text="@string/info_add_note" />

            <TextView
                android:id="@+id/userName"
                style="@style/my_setting_left_tv_style"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp" />

            <ImageView
                android:id="@+id/textView1"
                style="@style/my_setting_right_tv_style" />
        </RelativeLayout>

        <View
            android:id="@+id/addNotesLine"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/tab_sep_line" />
        <RelativeLayout
            android:id="@+id/joinBlack"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/textColor" >

            <TextView
                android:id="@+id/notifyTv"
                style="@style/my_setting_left_tv_style"
                android:text="@string/black_list_join" />

            <com.lingtuan.firefly.custom.switchbutton.SwitchButton
                android:id="@+id/joinBlackSb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:kswThumbColor="@color/textColor"
                app:kswBackColor="@color/switch_button_gray"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/tab_sep_line" />

        <RelativeLayout
            android:id="@+id/report"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/scrollview_item_bg" >

            <TextView
                style="@style/my_setting_left_tv_style"
                android:text="@string/report" />

            <ImageView
                style="@style/my_setting_right_tv_style" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>